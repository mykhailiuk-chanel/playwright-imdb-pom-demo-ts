{
  "compilerOptions": {
    "target": "ES2020",                   // Modern JS output
    "module": "CommonJS",                 // Node.js module system
    "lib": ["ES2020", "DOM"],             // Support browser APIs & modern JS
    "strict": true,                        // Enable all strict type-checks
    "esModuleInterop": true,               // Support default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,             // Allow importing .json files
    "outDir": "dist",                      // Optional: compiled output
    "skipLibCheck": true,                  // Skip type checks on dependencies
    "types": ["node", "playwright/test"],   // Include Node & Playwright test types
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@fixtures/*": ["fixtures/*"],
      "@test-data/*": ["test-data/*"],
      "@utils/*": ["utils/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}